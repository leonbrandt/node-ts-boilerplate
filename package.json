{
	"name": "node-ts-boilerplate",
	"version": "0.0.0",
	"description": "node-ts-boilerplate",
	"author": "",
	"license": "ISC",
	"main": "index.js",
	"repository": {
		"type": "git",
		"url": "https://github.com/leonbrandt/node-ts-boilerplate.git"
	},
	"scripts": {
		"lint": "npx eslint --ext .ts src test",
		"lint:fix": "npx eslint --ext .ts src test --fix",
		"test": "env NODE_ENV=test npx jest --verbose",
		"build": "npx tsc && npx tsc-alias",
		"start": "env NODE_ENV=production node dist/index.js"
	},
	"devDependencies": {
		"@types/jest": "latest",
		"@types/node": "latest",
		"@typescript-eslint/eslint-plugin": "latest",
		"@typescript-eslint/eslint-plugin-tslint": "latest",
		"@typescript-eslint/parser": "latest",
		"@typescript-eslint/typescript-estree": "latest",
		"eslint": "latest",
		"jest": "latest",
		"ts-jest": "latest",
		"tsc-alias": "latest",
		"typescript": "latest"
	}
}
